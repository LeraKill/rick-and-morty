{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/layout/*": ["layout/*"],
      "@/pages/*": ["pages/*"],
      "@/types/*": ["types/*"],
      "@/constants/*": ["lib/constants/*"],
      "@/models/*": ["lib/models/*"],
      //      "@/function/*": ["lib/services/*"],
      "@/styles/*": ["styles/*"],
      "@/store/*": ["store/*"],
      "@/fonts/*": ["assets/fonts/*"],
      "@/icon/*": ["assets/Icon/*"],
      "@/image/*": ["assets/Image/*"]
    }
  },
  //   "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
